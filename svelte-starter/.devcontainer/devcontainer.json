{
  "name": "Svelte (Vite)",
  "build": {
    "dockerfile": "../Dockerfile"
  },

  "workspaceFolder": "/app",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "postCreateCommand": "npm install",

  "forwardPorts": [5173],
  
  "customizations": {
    "jetbrains": {
      "plugins": [
        "com.intellij.lang.javascript", 
        "org.jetbrains.plugins.svelte",
        "Docker"
      ]
    }
  }
}